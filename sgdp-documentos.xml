					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>
				<property name="sdd:numeroDeDocumento">
					<title>Número de documento</title> 
					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>
				<property name="sdd:tipoDeDocumento">
					<title>Tipo de documento</title> 
					<type>d:text</type>
					<mandatory>true</mandatory>					
				</property>
				<property name="sdd:fechaDeCreacion">
