				</property>
				<property name="sdd:idCategoriaDocumento">
					<title>ID Categoria Documento</title> 
					<type>d:int</type>
				</property>
				<property name="sdd:categoriaDocumento">
					<title>Categoria Documento</title> 
					<type>d:text</type>
				</property>
